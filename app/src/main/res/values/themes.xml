<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WSDE9" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nav_bar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="boxStrokeColor">@color/outline_border</item>-->
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:shadowColor">@color/light_grey</item>

        <!--        <item name="android:textColor">@color/grey_outline</item>-->
    </style>


    <style name="ButtonsCustom" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_btn</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey</item>
    </style>

    <style name="Theme.WSDE9.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WSDE9.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WSDE9.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>